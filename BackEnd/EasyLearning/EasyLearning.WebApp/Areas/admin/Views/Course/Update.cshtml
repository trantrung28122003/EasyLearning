@model EasyLearning.WebApp.Areas.admin.Models.CourseViewModel
@{
    ViewData["Title"] = "Update";
    Layout = "~/Areas/admin/Views/Shared/AdminViewShared.cshtml";
}

<h1 class="text-center">Cập nhập thông tin nội dung khóa học </h1>
<h1 class="text-center" style="margin-bottom: 40px"><strong>@Model.CoursesName</strong> </h1>
<hr />
    <div class="container">
    <form asp-action="Update" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group" style="display: none">
                <label asp-for="CourseId" class="control-label">Mã khóa học</label>
                <input asp-for="CourseId" class="form-control" />
                <span asp-validation-for="CourseId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoursesName" class="control-label">Tên khóa học</label>
                <input asp-for="CoursesName" class="form-control" />
                <span asp-validation-for="CoursesName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CourseType">Hình thức:</label>
                <select asp-for="CourseType" class="form-control">
                    <option value="@((int)EasyLearing.Infrastructure.Data.Entities.CourseEventType.Online)">Online</option>
                    <option value="@((int)EasyLearing.Infrastructure.Data.Entities.CourseEventType.Offline)">Offline</option>
                </select>
                <span asp-validation-for="CourseType" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoursesDescription" class="control-label">Chi tiết khóa học</label>
                <input asp-for="CoursesDescription" class="form-control" />
                <span asp-validation-for="CoursesDescription" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoursesPrice" class="control-label">Học phí</label>
                <input asp-for="CoursesPrice" class="form-control" />
                <span asp-validation-for="CoursesPrice" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Requirements" class="control-label">Yêu cầu</label>
                <input asp-for="Requirements" class="form-control" />
                <span asp-validation-for="Requirements" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CoureseContent" class="control-label">Nội dung khóa học</label>
                <input asp-for="CoureseContent" class="form-control" />
                <span asp-validation-for="CoureseContent" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="CurrentImage" class="control-label">Đường dẫn hình ảnh</label>
                <span class="form-control">@Model.CurrentImage</span>
                <span asp-validation-for="CurrentImage" class="text-danger"></span>
            </div>
            <div class="form-group" style="display:none">
                <input asp-for="CurrentImage" class="form-control" id="currentImage" />
                <span class="form-control">@Model.CurrentImage</span>
            </div>
                <div class="form-group text-center">
                <img src="@Model.CurrentImage" id="oldImage" class="img-thumbnail" style="max-width: 400px; max-height: 400px;" /> 
            </div>
            <div class="form-group" text-center>
                <label class="control-label">Thay đổi ảnh</label>
                <input type="checkbox" id="changeImageCheckbox" />
            </div>
            <div class="form-group" id="imageUploadSection">
                <label class="control-label">Ảnh mới</label>
            <input type="file" id="newImage" class="form-control" asp-for="Image" />
            </div>
            <div class="form-group">
                <label asp-for="StartDate" class="control-label">Ngày bắt đầu</label>
                <input asp-for="StartDate" class="form-control" />
                <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="EndDate" class="control-label">Ngày kết thúc</label>
                <input asp-for="EndDate" class="form-control" />
                <span asp-validation-for="EndDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RegistrationDeadline" class="control-label">Hạn đăng ký</label>
                <input asp-for="RegistrationDeadline" class="form-control" />
                <span asp-validation-for="RegistrationDeadline" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Instructor" class="control-label">Giảng Viên</label>
                <input asp-for="Instructor" class="form-control" />
                <span asp-validation-for="Instructor" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="MaxAttdendees" class="control-label">Số học viên tối đa</label>
                <input asp-for="MaxAttdendees" class="form-control" />
                <span asp-validation-for="MaxAttdendees" class="text-danger"></span>
            </div>
           
            <div class="form-group">
                <label asp-for="StartDate" class="control-label">Ngày tạo</label>
            <input asp-for="StartDate" class="form-control" />
            <span asp-validation-for="StartDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DateChange" class="control-label">Ngày thay đổi</label>
                <input asp-for="DateChange" class="form-control" />
                <span asp-validation-for="DateChange" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Thể Loại</label>
                @foreach (var category in ViewBag.Categories)
                {
                    <div class="checkbox">
                        <label>
                            <input type="checkbox" name="selectedCategories" value="@category.Value" checked="@category.Selected" />
                            @category.Text
                        </label>
                    </div>
                }
            </div>
            <div class="form-group text-center" style="">
                <input type="submit" value="Lưu thay đổi" class="btn btn-outline-info btn-lg btn-block" />
            </div>
        </form>
    </div>

<div>
    <a asp-action="Index" class="btn btn-outline-danger">Quay lại</a>
</div>

<script>
    document.addEventListener("DOMContentLoaded", function (event) {
        document.getElementById("imageUploadSection").style.display = "none";
        document.getElementById("changeImageCheckbox").addEventListener("change", function () {
            var imageUploadSection = document.getElementById("imageUploadSection");
            if (this.checked) {
                document.getElementById("currentImage").value = "";
                imageUploadSection.style.display = "block";
            } else {
                imageUploadSection.style.display = "none";
                document.getElementById("newImage").value = "";
            }
        });
    });
</script>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

