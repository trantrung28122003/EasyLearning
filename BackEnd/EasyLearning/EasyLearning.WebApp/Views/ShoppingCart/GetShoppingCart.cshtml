@model IEnumerable<EasyLearing.Infrastructure.Data.Entities.ShoppingCartItem>

@{
    ViewData["Title"] = "GetShoppingCart";
}

<section class="vh-100" style="background-color: white;">
    <div class="container h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col">
                <p><span class="h2">Shopping Cart </span><span class="h4">(1 item in your cart)</span></p>
                @foreach (var itemCartItem in Model)
                {
                    <div class="card mb-4" style="background-color: #2bc5d4; border-color: #1fc2d1 ;border-radius: 30px 30px 30px 30px">
                        <div class="card-body p-4">

                            <div class="row align-items-center">
                                <div class="col-md-2">
                                    <img src="https://mdbcdn.b-cdn.net/img/Photos/Horizontal/E-commerce/Products/1.webp"
                                         class="img-fluid" alt="Generic placeholder image">
                                </div>
                                <div class="col-md-2 d-flex justify-content-center">
                                    <div>
                                        <p class="small text-muted mb-4 pb-2">Name</p>
                                        <p class="lead fw-normal mb-0">@itemCartItem.CartItemName</p>
                                    </div>
                                </div>
                                <div class="col-md-2 d-flex justify-content-center">
                                    <div>
                                        <p class="small text-muted mb-4 pb-2">Quantity</p>
                                        <p class="lead fw-normal mb-0">
                                            <i class="fas fa-circle me-2" style="color: #2bc5d4;"></i>
                                            @itemCartItem.Quantity;
                                        </p>
                                    </div>
                                </div>
                                <div class="col-md-2 d-flex justify-content-center">
                                    <div>
                                        <p class="small text-muted mb-4 pb-2">Price</p>
                                        <p class="lead fw-normal mb-0">@itemCartItem.CartItemPrice</p>
                                    </div>
                                </div>
                                <div class="col-md-2 d-flex justify-content-center">
                                    <div>
                                        <p class="small text-muted mb-4 pb-2">Discount</p>
                                        <p class="lead fw-normal mb-0">$799</p>
                                    </div>
                                </div>
                                <div class="col-md-2 d-flex justify-content-center">
                                    <div>
                                        <p class="small text-muted mb-4 pb-2">Actions</p>
                                        <button class="btn btn-danger" onclick="deleteCartItem(@itemCartItem.Id)">
                                            <i class="fas fa-trash-alt"></i> Remove
                                        </button>
                                    </div>
                                </div>
                            </div>

                        </div>
                    </div>
                
                <div class="card mb-5">
                    <div class="card-body p-4">

                        <div class="float-end">
                            <p class="mb-0 me-5 d-flex align-items-center">
                                <span class="small text-muted me-2">Order total:</span> <span class="lead fw-normal">$799</span>
                            </p>
                        </div>

                    </div>
                </div>
                }
                <div class="card mb-4">
                    <div class="card-body p-4">

                        <div class="row align-items-center">
                            <div class="col-md-2">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/Horizontal/E-commerce/Products/1.webp"
                                     class="img-fluid" alt="Generic placeholder image">
                            </div>
                            <div class="col-md-2 d-flex justify-content-center">
                                <div>
                                    <p class="small text-muted mb-4 pb-2">Name</p>
                                    <p class="lead fw-normal mb-0">iPad Air</p>
                                </div>
                            </div>
                            <div class="col-md-2 d-flex justify-content-center">
                                <div>
                                    <p class="small text-muted mb-4 pb-2">Price</p>
                                    <p id="price" class="lead fw-normal mb-0 ">$799</p>
                                </div>
                            </div>
                            <div class="col-md-2 d-flex justify-content-center">
                                <div>
                                    <p class="small text-muted mb-4 pb-2">Quantity</p>
                                    <p class="lead fw-normal mb-0">1</p>
                                </div>
                            </div>
                            <div class="col-md-2 d-flex justify-content-center">
                                <div>
                                    <p class="small text-muted mb-4 pb-2">Discount</p>
                                    <p id="discount" class="lead fw-normal mb-0">$799</p>
                                </div>
                            </div>
                            <div class="col-md-2 d-flex justify-content-center">
                                <div>
                                    <p class="small text-muted mb-4 pb-2">Actions</p>
                                    <button class="btn btn-danger" >
                                        <i class="fas fa-trash-alt"></i> Delete
                                    </button>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>

                <div class="card mb-5">
                    <div class="card-body p-4">

                        <div class="float-end">
                            <p class="mb-0 me-5 d-flex align-items-center">
                                <span class="small text-muted me-2">Order total:</span> <span class="lead fw-normal">$799</span>
                            </p>
                        </div>

                    </div>
                </div>
                <div class="input-group mb-3" style="width: 300px;">
                    <input id="coupon-code" type="text" class="form-control" placeholder="Enter coupon code" aria-label="Coupon code" aria-describedby="apply-coupon">
                    <button style="background-color: #2bc5d4; color: white;" class="btn btn-outline-secondary ms-2" type="button" onclick="applyCoupon()" id=" apply-coupon">Apply</button>
                </div>
                <div class="d-flex justify-content-end">
                    
                    <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-light btn-lg me-2">Continue shopping</button>
                    <button type="button" data-mdb-button-init data-mdb-ripple-init class="btn btn-primary btn-lg">Add to cart</button>
                </div>
                <div id="error-message" style="" class="text-danger"></div>
            </div>
        </div>
    </div>
</section>
<script>
    function deleteCartItem(cartItemId) {
        fetch('/GetShoppingCart/DeleteCartItem', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ cartItemId: cartItemId })
        })
            .then(response => {
                if (response.ok) {
             
                    var cartItemElement = document.getElementById('cart-item-' + cartItemId);
                    if (cartItemElement) {
                        cartItemElement.remove();
                    } else {
                        console.error('Failed to find cart item element to delete.');
                    }
                    console.log('CartItem deleted successfully.');
                } else {
                    console.error('Failed to delete cart item.');
                }
            })
            .catch(error => {
                console.error('Error deleting cart item:', error);
            });
    }

    var validCoupons = ['COUPON1', 'COUPON2', 'COUPON3'];

    function applyCoupon() {
        var couponCode = document.getElementById('coupon-code').value;
        var priceElement = document.getElementById('price');
        var discountElement = document.getElementById('discount');
        var errorMessageElement = document.getElementById('error-message');
        var succsesMessageElement = document.getElementById('succses-message');
        if (validCoupons.includes(couponCode)) {
            var price = parseFloat(priceElement.textContent.replace('$', ''));
            var discountedPrice = price - 100; 
            discountElement.textContent = discountedPrice.toFixed(2) +'VNĐ';
            priceElement.classList.add('text-decoration-line-through')
            priceElement.classList.add('text-decoration-line-through');
            errorMessageElement.textContent = '';
        } else {
            errorMessageElement.textContent = 'Mã giảm giá không hợp lệ. Vui lòng thử lại!';
        }
    }
</script>
