@model EasyLearning.WebApp.Models.ResetPasswordViewModel
@{
    ViewData["Title"] = "ForgetPassword";
    Layout = "~/Views/Shared/AuthenticationViewShared.cshtml";
}
<div class="container">
    <form asp-action="ForgetPassword" asp-controller="Account" method="post" id="resetPasswordForm">
        <div class="logindiv">
            <div class="form-floating form-floating-outline mb-3">
                <input style="border-color: #06BBCC;" type="email" class="form-control" id="email" name="email" placeholder="Nhập Email" asp-for="Email" required />
                <label style="color: #06BBCC;" for="email">Email</label>
                <span asp-validation-for="@Model.Email" class="text-danger"></span>
                <span id="email-validation-error" class="text-danger"></span>
            </div>

            <div class="form-floating form-floating-outline mb-3">
                <input style="border-color: #06BBCC;" type="text" class="form-control" id="verificationCode" name="verificationCode" placeholder="Nhập mã" disabled required />
                <label style="color: #06BBCC;" for="verificationCode">Mã xác thực</label>
                <button id="sendVerificationCode" style="background-color: #06BBCC; border-color: #06BBCC;" type="button" class="btn btn-primary btn-send-verification">Gửi mã xác thực</button>
                <span id="verificationCode-error" class="text-danger"></span>
            </div>
            <input type="hidden" id="hiddenSendVerificationCode" name="hiddenSendVerificationCode" />
            <div class="mb-3">
                <label>Hãy nhập địa chỉ email lúc bạn tạo tài khoản</label>
            </div>
          
            <button id="resetPasswordButton" type="submit" class="btn btn-primary d-grid w-100 mt-3">Đặt lại mật khẩu</button>
        </div>
    </form>
</div>
<style>
    .form-floating {
        position: relative;
        margin-bottom: 1rem;
    }
    .btn-send-verification {
        position: absolute;
        top: 0;
        right: 0;
        height: 100%;
        margin: 0;
        font-size: 14px;
        width: 40%;
    }
</style>

<script src="~/js/ResetPassword.js"></script>
