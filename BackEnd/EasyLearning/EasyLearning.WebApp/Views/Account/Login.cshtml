@model EasyLearning.WebApp.Models.UserLoginViewModel
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/AuthenticationViewShared.cshtml";
}


<div class="container">
    <form asp-action="Login" asp-controller="Account" method="post">
        <div class="logindiv">
            <form id="formAuthentication" class="mb-3" action="index.html">
                <div class="form-floating form-floating-outline mb-3">
                    <input type="text" class="form-control" id="email" name="email" placeholder="Nhập Email" asp-for="Email" />
                    <label for="email">Email</label>
                    @Html.ValidationMessageFor(m => m.Email)
                    <span asp-validation-for="@Model.Email" class="text-danger"></span>
                </div>
                <div class="form-floating form-floating-outline mb-3">
                    <input type="password"
                           id="password"
                           class="form-control"
                           name="password"
                           placeholder="&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;&#xb7;"
                           aria-describedby="password"
                           asp-for="Password" />
                    <label for="password">Mật Khẩu</label>
                    @Html.ValidationMessageFor(m => m.Password)
                    <span asp-validation-for="@Model.Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <div class="form-check">
                        <input class="form-check-input" type="checkbox" id="terms-conditions" name="terms" />
                        <label class="form-check-label" for="terms-conditions">Lưu Đăng Nhập</label>
                    </div>
                </div>
                <button type="submit" class="btn btn-primary d-grid w-100">Đăng Nhập</button>
                <p class="text-center">
                    <span>Chưa có tài khoản ?</span>
                    <a asp-action="register" asp-controller="account">
                        <span> Đăng ký <span>
                    </a>
                </p>
            </form>
        </div>
    </form>

    <a class="btn btn-info" asp-action="GoogleLogin">Log In With Google</a>
</div>  