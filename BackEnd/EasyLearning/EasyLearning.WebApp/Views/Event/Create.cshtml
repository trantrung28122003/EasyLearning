@model EasyLearning.WebApp.Models.EventViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>CourseEvent</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        @using (Html.BeginForm("Create", "Event", FormMethod.Post))
        {
            <div class="form-group">
                <label asp-for="EventName">Event Name:</label>
                <input asp-for="EventName" class="form-control" />
                <span asp-validation-for="EventName" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="EventType">Event Type:</label>
                <select asp-for="EventType" class="form-control">
                    <option value="@((int)EasyLearing.Infrastructure.Data.Entities.EnventType.Online)">Online</option>
                    <option value="@((int)EasyLearing.Infrastructure.Data.Entities.EnventType.Offline)">Offline</option>
                </select>
                <span asp-validation-for="EventType" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Location">Location:</label>
                <input asp-for="Location" class="form-control" />
                <span asp-validation-for="Location" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="DateStart">Date Start:</label>
                <input asp-for="DateStart" class="form-control" />
                <span asp-validation-for="DateStart" class="text-danger"></span>
            </div>

            <div class="tranningPart">
                <div class="form-group">
                    <label>Tranning Part Name:</label>
                    <input type="text" name="TranningParts[0].TranningPartName" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Tranning Part StartTime:</label>
                    <input type="text" name="TranningParts[0].StartTime" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Tranning Part EndTime:</label>
                    <input type="text" name="TranningParts[0].EndTime" class="form-control" />
                </div>
                <div class="form-group">
                    <label>Tranning Part Description:</label>
                    <input type="text" name="TranningParts[0].Description" class="form-control" />
                </div>
            </div>

            <button type="button" id="addTranningPart" class="btn btn-primary">Add Tranning Part</button>


            <button type="submit" class="btn btn-success">Create Event</button>
        }
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@* @section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
} *@
@section Scripts {
    <script>
        $(document).ready(function () {
            var index = 1; // Đặt giá trị ban đầu của index là 1

            $("#addTranningPart").click(function () {
                var tranningPartHtml = `
                        <div class="tranningPart">
                            <div class="form-group">
                                <label>Tranning Part Name:</label>
                                <input type="text" name="TranningParts[${index}].TranningPartName" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Tranning Datestart:</label>
                                <input type="text" name="TranningParts[${index}].StartTime" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Tranning Part DateEnd:</label>
                                <input type="text" name="TranningParts[${index}].EndTime" class="form-control" />
                            </div>
                            <div class="form-group">
                                <label>Tranning Part Description:</label>
                                <input type="text" name="TranningParts[${index}].Description" class="form-control" />
                            </div>
                        </div>`;
                $("#tranningParts").append(tranningPartHtml);
                index++; // Tăng giá trị của index sau mỗi lần thêm mới
            });
        });
    </script>
}