@using EasyLearing.Infrastructure.Data.Entities;
@model EasyLearning.WebApp.Areas.admin.Models.TrainingPartViewModel

@{
    ViewData["Title"] = "Chi tiết";
    Layout = "~/Areas/admin/Views/Shared/AdminViewShared.cshtml";
}

<h1 class="text-center">Chi tiết nội dung phần học</h1>
<h1 class="text-center" style="margin-bottom: 40px"><strong>@Model.TrainingPartName</strong></h1>
<hr />

<div class="container">
    <div>
        <div class="form-group">
            <label class="control-label">Buổi học</label>
            <span class="form-control">@Model.EventId</span>
        </div>

        <div class="form-group">
            <label class="control-label">Tên phần học</label>
            <span class="form-control">@Model.TrainingPartName</span>
        </div>

        <div class="form-group">
            <label class="control-label">Thời gian bắt đầu</label>
            <span class="form-control">@Model.StartTime</span>
        </div>

        <div class="form-group">
            <label class="control-label">Thời gian kết thúc</label>
            <span class="form-control">@Model.EndTime</span>
        </div>

        <div class="form-group">
            <label class="control-label">Mô tả</label>
            <div class="form-control" style="overflow-y: auto; height: 100px; padding: 6px 12px;">
                @Model.Description
            </div>
        </div>


        <div class="form-group">
            <label class="control-label">Hình thức</label>
            <span class="form-control">
                @((Model.TrainingPartType == TrainingPartType.Lesson) ? "Lý thuyết" :
                    (Model.TrainingPartType == TrainingPartType.Exercise) ? "Bài tập" :
                    "Không xác định")
            </span>
        </div>

        <div class="form-group">
            <label class="control-label">Đường dẫn video</label>
            <span class="form-control">@Model.VideoUrl</span>
        </div>

        <div class="form-group">
            <label class="control-label"> @(Model.IsFree ? "Miễn phí phần bài học này" : "Tính phí phần bài học này")</label>
      
        </div>
    </div>
    <div class="form-group text-center" style="">
        <a asp-action="Index" asp-route-courseId="@Model.CoursesId" class="btn btn-outline-info btn-lg btn-block">Quay lại</a>
    </div>
</div>
